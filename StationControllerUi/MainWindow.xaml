<Window x:Class="StationControllerUi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StationControllerUi"
        xmlns:views="clr-namespace:StationControllerUi.Views"
        mc:Ignorable="d"
        Title="Station Controller" Height="588" Width="884">
    
    <DockPanel>
        <StackPanel Orientation="Vertical" DockPanel.Dock="Top">
            <views:MainMenuView x:Name="mainMenuView" />
            <views:ProcessControlView x:Name="processControlView" />
        </StackPanel>
        <Grid DockPanel.Dock="Bottom">
            <views:EditorView x:Name="editorView" />
        </Grid>
    </DockPanel>
</Window>
